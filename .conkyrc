background yes
update_interval 1

#default_color A90C32
#default_color 3691FF
default_color eeeeee

alignment top_right
gap_x 30
gap_y 61
minimum_size 400
maximum_width 400

draw_borders yes
border_width 0
border_inner_margin 5

draw_shades yes
default_shade_color 000000

own_window yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes
own_window_argb_value 180
own_window_type desktop
own_window_type override
double_buffer yes

use_xft yes
xftfont lucy tewi:size=10

imlib_cache_size 100

TEXT
${image /tmp/mpd-track-cover -s 59x61}${offset 64}${mpd_artist} - ${mpd_title}
${offset 64}${mpd_bar}
${offset 64}${mpd_elapsed}/${mpd_length}
${exec ~/.conky-mpd/extract_cover.sh}
